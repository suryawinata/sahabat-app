<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.toko.sahabat.SearchActivity">

    <EditText
        android:id="@+id/inputSearchItem"
        android:layout_width="580dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:background="@drawable/gradient"
        android:ems="10"
        android:hint="@string/searchItem"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/productNameLabel"
        android:labelFor="@+id/productNameLabel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/inputSearchItem"
        android:layout_marginStart="18dp"
        android:layout_marginTop="57dp"
        android:inputType="text"
        android:selectAllOnFocus="false"
        android:text="@string/productName"
        android:textAlignment="textStart"
        android:textColor="@color/colorWhite"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/productName"
        android:labelFor="@+id/productName"
        android:layout_width="540dp"
        android:layout_height="120dp"
        android:layout_alignBaseline="@+id/productNameLabel"
        android:layout_alignBottom="@+id/productNameLabel"
        android:layout_toEndOf="@+id/productNameLabel"
        android:inputType="none|text"
        android:textAlignment="textStart"
        android:textColor="@color/colorWhite"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/stockQtyLabel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/inputSearchItem"
        android:layout_marginStart="20dp"
        android:layout_marginTop="200dp"
        android:inputType="text"
        android:labelFor="@+id/productNameLabel"
        android:selectAllOnFocus="false"
        android:text="@string/productName"
        android:textAlignment="textStart"
        android:textColor="@color/colorWhite"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/stockQty"
        android:layout_width="540dp"
        android:layout_height="120dp"
        android:layout_alignBaseline="@+id/productNameLabel"
        android:layout_alignBottom="@+id/productNameLabel"
        android:layout_toEndOf="@+id/productNameLabel"
        android:inputType="none|text"
        android:labelFor="@+id/productName"
        android:textAlignment="textStart"
        android:textColor="@color/colorWhite"
        android:textSize="32sp" />

</RelativeLayout>
